{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "lib": ["dom", "es5", "scripthost", "es2015.collection", "es2015.promise"]
  },
  "include": ["src/**/*"]
}
